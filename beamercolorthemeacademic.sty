\mode<presentation>

% Define colours
\definecolor{primary-accent}{HTML}{057172}
\definecolor{secondary-accent}{HTML}{7E1261}
\definecolor{text}{HTML}{011414}
\definecolor{important-text}{HTML}{000000}
\definecolor{title-text}{HTML}{000000}


% Settings

% slide backgrounds
\setbeamercolor*{background canvas}{bg = primary-accent!2}

% text colour
\setbeamercolor*{normal text}{fg = text}
\setbeamercolor*{title page header}{fg = white}
\setbeamercolor*{author}{fg = text}
\setbeamercolor*{date}{fg = gray}

% presentation and slide titles
\setbeamercolor*{frametitle}{fg = title-text, bg = primary-accent}
\setbeamercolor*{title}{fg = title-text}

% table of contents and outline slide titles
\setbeamercolor*{section in toc}{fg = title-text}
\setbeamercolor*{section in toc shaded}{fg = title-text}

% enumerate & itemize items
\setbeamercolor*{item}{fg = text}
\setbeamercolor*{subitem}{fg = text}
\setbeamercolor*{subsubitem}{fg = text}

% item heading of the description environment
\setbeamercolor*{description item}{fg = text}

% captions for figures and tables
\setbeamercolor*{caption}{fg = text!90}
\setbeamercolor*{caption name}{fg = text!90}

% Standard block
\setbeamercolor*{block title}{fg = important-text, bg = white}
\setbeamercolor*{block body}{bg = primary-accent!1}

% Alert block
\setbeamercolor*{block title alerted}{bg = primary-accent!1}
\setbeamercolor*{block body alerted}{bg = primary-accent!1}

% Example block
\setbeamercolor*{block title example}{fg = important-text, bg = primary-accent!1}
\setbeamercolor*{block body example}{bg = primary-accent!1}

\mode
<all>
